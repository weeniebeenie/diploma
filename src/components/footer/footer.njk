{#{%- from 'views/utils/utils.njk' import wrapper -%}#}
{%- from 'components/logo/logo.njk' import Logo -%}
{% from 'views/core-components/icon.njk' import Icon %}
{%- from 'components/social-networks/social-networks.njk' import SocialNetworks -%}

{#
    FooterInfo template.
#}
{%- macro FooterInfo(
    isHome,
    siteName = 'Tenloc',
    logoSrc = 'images/logos/logo.svg'
) -%}
    <section class="footer-info">
        <h2 class="ghost">Информация о сайте</h2>
        <div class="footer-info__logo">
{#            {% call wrapper(className ='logo', href = '' if isHome else './index.html') %}#}
{#                <img src="{{ logoSrc }}" alt="{{ '' if isHome else siteName + ' (вернуться на главную страницу)' }}">#}
{#            {% endcall %}#}
            {{ Logo(isHome) }}
        </div>
        <address class="footer-info__content">
            <p class="footer-info__item">
                {{ Icon('fas fa-map-marker-alt') }}
                <span class="ghost">Адрес:</span>
                271100, г. Бердянск, пр-т Труда, 6
            </p>
        </address>
        <div class="footer-info__socials">
            {{ SocialNetworks() }}
        </div>
    </section>
{%- endmacro -%}

{#
    FooterNav template.
#}
{%- macro FooterNav(
    title = 'Title placeholder',
    linksArr = ['First link', 'Second link', 'Third link']
) -%}
    <section class="footer-nav">
        <h3 class="footer-nav__title">{{ title }}</h3>
        <ul class="footer-nav__list">
            {% for link in linksArr %}
                <li class="footer-nav__list-item">
                    <a href="#" class="footer-nav__list-link">{{ link }}</a>
                </li>
            {% endfor %}
        </ul>
    </section>
{%- endmacro -%}

{#
    Footer template.
#}
{%- macro Footer(
    isHome,
    authorLink = '#',
    authorTagline = 'Разработчик',
    authorLogo = 'images/logos/logo-author.svg'
) -%}
    <footer class="footer appearance-animation" role="contentinfo">
        <div class="footer__container">
            <div class="footer__row">
                <div class="footer__column is-first">
                    {{ FooterInfo(isHome = isHome) }}
                </div>
                <div class="footer__column is-last">
                    {{ FooterNav(
                        title = 'ГБУЗ «Бердянская городская больница»',
                        linksArr = ['Услуги', 'Врачи', 'Контакты', 'Карта сайта']
                    ) }}
                    {{ FooterNav(
                        title = 'Информация',
                        linksArr = ['Пациентам', 'Правовая информация', 'Лицензии', 'Политика обработки персональных данных', 'Вакансии']
                    ) }}
                </div>
            </div>
            <div class="footer__bottom">
                <p class="footer__copyright">© 2024 ГБУЗ «Бердянская городская больница».</p>
                <p class="footer__author">
                    Разработка сайта:
                    <a href="{{ authorLink }}"
                       class="footer__author-link"
                       target="_blank"
                       rel="noreferrer"
                       title="{{ authorTagline }}"
                    >
                        Башмак Елизавета <span class="ghost">(перейти на сайт разработчика)</span>
                    </a>
                </p>
            </div>
        </div>
    </footer>
{%- endmacro -%}
