{%- from 'views/utils/utils.njk' import wrapper -%}

{#
    Logo template.
#}
{%- macro Logo(
    isHome = false,
    siteName = 'Бердянская городская больница',
    logoSrc = 'images/logos/logo.svg'
) -%}
    {% call wrapper(
        className = 'logo',
        tag = 'h1' if isHome,
        href = '' if isHome else './index.html',
        attrs = {} if isHome else { title: siteName + ' (вернуться на главную страницу)' }
    ) %}
        <span class="logo__image">
            <img
                src="{{ logoSrc }}"
                alt="{{ siteName if isHome else siteName + ' (вернуться на главную страницу)' }}"
                height="65"
                width="65"
            >
        </span>
        <span class="logo__text">{{ siteName }}</span>
    {% endcall %}
{%- endmacro -%}